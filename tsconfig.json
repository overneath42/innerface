{
  "files": ["./typings.d.ts", "src/index.ts"],
  "exclude": [
    "node_modules",
    "config/**/*",
    "fixtures/markup/**/*.ts",
    "fixtures/objects/**/*.ts",
    "/.vscode"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["dom", "es5", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "out",
    "paths": {
      "*": ["*", "./@types/*"],
      "lodash/*": ["node_modules/@types/lodash-es/*"]
    },
    "strictNullChecks": false,
    "skipLibCheck": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "lodash-es", "inflection"]
  },
  "compileOnSave": true
}
