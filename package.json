  "description": "A system of simple UI actions implemented with an HTML API.",
  "main": "dist/innerface.min.js",
  "typings": "./typings.d.ts",
  "repository": "https://github.com/overneath42/innerface.git",
  "keywords": [
    "javascript",
    "framework"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/inflection": "^1.5.28",
    "@types/jest": "^20.0.4",
    "@types/lodash": "^4.14.69",
    "@types/lodash-es": "^4.14.5",
    "@types/node": "^8.0.7",
    "@types/webpack": "^3.0.1",
    "@types/webpack-merge": "^0.0.4",
    "awesome-typescript-loader": "^3.2.1",
    "faker": "^4.1.0",
    "jest": "^20.0.4",
    "lodash-ts-webpack-plugin": "^1.1.4",
    "rimraf": "^2.6.1",
    "semistandard": "^11.0.0",
    "source-map-loader": "^0.2.1",
    "standard": "^10.0.2",
    "ts-jest": "^20.0.6",
    "ts-node": "^3.1.0",
    "tslint": "^5.4.3",
    "tslint-config-standard": "^6.0.1",
    "tslint-eslint-rules": "^4.1.1",
    "typedoc": "^0.7.1",
    "typescript": "^2.4.2",
    "typescript-babel-jest": "^1.0.5",
    "webpack": "^3.0.0",
    "webpack-init": "^0.1.2",
    "webpack-livereload-plugin": "^0.11.0",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "@types/faker": "^4.1.0",
    "inflection": "^1.12.0",
    "lodash-es": "^4.17.4"
  },
  "scripts": {
    "test": "jest",
    "docs": "typedoc --out docs/ src/ --name 'Innerface' --readme README.md --target ES5",
    "dev": "webpack --config ./config/webpack.dev.ts",
    "build": "rimraf ./dist && webpack --config ./config/webpack.prod.ts"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "typescript-babel-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!lodash-es)"
    ],
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "."
    ]
  }
}
